<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/> <!-- Полупрозрачный черный для тени -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Основная золотая табличка -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Золотой фон -->
            <stroke
                android:width="2dp"
                android:color="#B8860B" /> <!-- Тёмно-золотая обводка -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
